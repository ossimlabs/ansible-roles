{
    "variables": {
        "aws_region": "us-east-1",
        "aws_availability_zone": "us-east-1a",
        "aws_iam_instance_profile": "AWS-EC2-Admin",
        "aws_subnet_id": "subnet-e5218dbe",
        "aws_instance_type": "p2.xlarge",
        "aws_ssh_keypair_name": "ec2_dev_2018",
        "aws_ssh_private_key_file": "/Users/anies/.ssh/ec2_dev_2018.pem",
        "aws_root_ebs_volume_size": "50",
        "aws_ssh_username": "centos"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "ami_name": "elastalert-{{isotime | clean_ami_name}}",
            "iam_instance_profile": "{{user `aws_iam_instance_profile`}}",
            "availability_zone": "{{user `aws_availability_zone`}}",
            "subnet_id": "{{user `aws_subnet_id`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "{{user `aws_instance_type`}}",
            "ssh_username": "{{user `aws_ssh_username`}}",
            "ssh_keypair_name": "{{user `aws_ssh_keypair_name`}}",
            "ssh_private_key_file": "{{user `aws_ssh_private_key_file`}}",
            "ssh_interface": "public_ip",
            "ssh_timeout": "10m",
            "associate_public_ip_address": "true",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": "{{user `aws_root_ebs_volume_size`}}",
                    "volume_type": "gp2",
                    "delete_on_termination": true
                }
            ],
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "centos_7_base_*",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "320588532383"
                ],
                "most_recent": true
            },
            "run_tags": {
                "Name": "packer-generated-elastalert-init-temp",
                "Application": "elastalert",
                "Project": "alerting"
            },
            "tags": {
                "Name": "elastalert-{{isotime | clean_ami_name}}",
                "Application": "Elastalert",
                "Project": "alerting"
            }
        }
    ],
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "../ansible/install_elastalert.yml",
            "groups": [
                "elastalert"
            ]
        }
    ]
}